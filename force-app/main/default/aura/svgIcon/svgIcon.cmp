<aura:component access="global">
  <aura:attribute name="svgPath"    access="global"      default="" type="String" description="the path for the icon in the static resource, this will be use in a SVG use tag" />
  <aura:attribute name="name"       access="global"     default="" type="String" description="Symbol name of icon" />
  <aura:attribute name="class"      access="global"    default="" type="String" description="the class of this SVG tag, can be use for CSS purpose" />
  <aura:attribute name="containerClass" access="global"  default="" type="String" description="Container class name for span container of icon" />
  <aura:attribute name="category"    access="global"     default="" type="String" description="Category of icon- action, standard, utility etc." />
  <aura:attribute name="size"         access="global"    default="" type="String" description="Size of icon-- small, medium, large" />
  <aura:attribute name="assistiveText"  access="global"  default="" type="String" description="Description name of icon" />
  <span aura:id="container" class="{!v.containerClass}">
    <span aura:id="assistiveText" class="slds-assistive-text">{!v.assistiveText}</span>
  </span>
</aura:component>